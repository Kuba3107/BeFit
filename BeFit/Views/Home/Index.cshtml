@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Witaj w <strong>BeFit</strong></h1>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <a class="nav-link  text-dark" asp-area="" asp-controller="TrainingEntries" asp-action="Index">Wpisy treningowe</a>
        </li>
        <li class="list-group-item">
            <a class="nav-link  text-dark" asp-area="" asp-controller="TrainingSessions" asp-action="Index">Sesje treningowe</a>
        </li>
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Stats" asp-action="Index">Statystyki</a>
        </li>
        @if (User.IsInRole("Administrator"))
        {
            <li class="list-group-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="ExerciseTypes" asp-action="Index">Rodzaje ćwiczeń</a>
            </li>
        }
    </ul>
</div>
