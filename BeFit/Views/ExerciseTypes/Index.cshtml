@model IEnumerable<BeFit.Models.ExerciseType>

@{
    ViewData["Title"] = "Index";
}


<h3>
    <a class="btn btn-primary" asp-action="Create">Dodaj nowe ćwiczenie</a>
</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="btn-group">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
