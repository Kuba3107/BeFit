@model BeFit.Models.TrainingEntry

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj wpis</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Id">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
      
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TrainingSessionId" class="control-label"></label>
                <select asp-for="TrainingSessionId" class="form-control" asp-items="ViewBag.TrainingSessionId"></select>
                <span asp-validation-for="TrainingSessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseTypeId" class="control-label"></label>
                <select asp-for="ExerciseTypeId" class="form-control" asp-items="ViewBag.ExerciseTypeId"></select>
                <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Load" class="control-label"></label>
                <input asp-for="Load" class="form-control" />
                <span asp-validation-for="Load" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reps" class="control-label"></label>
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
            <div class="form-group btn-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a class ="btn btn-primary" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
